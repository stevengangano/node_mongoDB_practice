	
<h6><a href="/todos/new"> Add new item </a> </h6>
<div class="row" style="display: flex; flex-wrap: wrap;">
	<% todos.forEach(function(sometodo){ %>
		<div class="peopleImage">
			<div class="peopleMargin overlay">

				<form action="/todos/<%= sometodo._id %>?_method=DELETE" method="POST">
				<button class> Delete </button>	
				</form>

				<a href="/todos/<%= sometodo._id %>"> Show </a>
				<p> <%= sometodo.name %>, <%= sometodo.text %></p>

			</div>
	<% }); %>
</div>